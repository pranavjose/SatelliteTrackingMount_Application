<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvSatelliteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Satellite Name"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSatelliteNorad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NORAD ID: 00000"
        android:textSize="14sp" />
    <!-- New Button for propagating satellite path -->
    <Button
        android:id="@+id/btnPropagatePath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Propagate Path" />

</LinearLayout>
